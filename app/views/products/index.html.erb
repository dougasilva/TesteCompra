<% if flash[:notice] %>
  <p><%= flash[:notice] %> </p>
<% end %>
<h1>Lista de Produtos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Preço</th>
      <th scope="col">Quantidade</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.unit_price %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to 'Exibir', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Excluir', product, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="form-actions" style="color: white">
  <%= link_to 'Novo Produto', new_product_path, class: "btn btn-info" %>
  <%= link_to 'Voltar', root_path, class: "btn btn-warning" %>
</div>
